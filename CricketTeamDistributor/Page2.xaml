<Page
    x:Class="CricketTeamDistributor.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CricketTeamDistributor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock 
            x:Name="GameTextBlock"
            HorizontalAlignment="Left" 
            Height="75" Margin="82,78,0,0" TextWrapping="Wrap" 
            Text="TextBlock" VerticalAlignment="Top" 
            Width="239"
            Style="{ThemeResource HeaderTextBlockStyle}"/>
        <Button 
            x:Name="AddButton"
            Content="Add Team Members" HorizontalAlignment="Left" 
            Height="78" Margin="68,345,0,0" VerticalAlignment="Top" 
            Width="290"
            Click="AddButton_Click"
            />
        
        <Button
            x:Name="BuildButton"
            Content="Build Teams" HorizontalAlignment="Left" 
            Height="78" Margin="68,469,0,0" VerticalAlignment="Top" 
            Width="290"
            Click="BuildButton_Click"
            />
        
        <Button
            x:Name="ViewButton"
            Content="My Team" HorizontalAlignment="Left" 
            Height="75" Margin="68,225,0,0" VerticalAlignment="Top" 
            Width="290"
            Click="ViewButton_Click"
            />

    </Grid>
</Page>
