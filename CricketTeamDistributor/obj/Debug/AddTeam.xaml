<Page
    x:Class="CricketTeamDistributor.AddTeam"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CricketTeamDistributor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock 
            HorizontalAlignment="Left" Height="55" 
            Margin="37,33,0,0" TextWrapping="Wrap" 
            Text="Add Team Member" VerticalAlignment="Top" 
            Width="260"
            FontSize="30"
            Style="{ThemeResource ListViewEmptyStaticTextBlockStyle}"
            
            />
        <TextBlock 
            HorizontalAlignment="Left" Height="37" 
            Margin="37,117,0,0" TextWrapping="Wrap" 
            Text="Name" VerticalAlignment="Top" Width="91"
            Style="{ThemeResource ListViewEmptyStaticTextBlockStyle}"/>
        <TextBox 
            x:Name="NameTextBox"
            HorizontalAlignment="Left" Height="41" 
            Margin="37,176,0,0" TextWrapping="Wrap" 
            Text="" VerticalAlignment="Top" 
            InputScope="AlphanumericFullWidth"
            Width="296"
            PlaceholderText="Enter name of player"/>
        <TextBlock
            x:Name="FirstSkillBox"
            HorizontalAlignment="Left" Height="51" 
            Margin="37,248,0,0" TextWrapping="Wrap" Text="Skill 1" 
            VerticalAlignment="Top" Width="176"
            Style="{ThemeResource ListViewEmptyStaticTextBlockStyle}"/>
        <TextBlock 
            x:Name="SecondSkillBox"
            HorizontalAlignment="Left" Height="49" 
            Margin="37,400,0,0" TextWrapping="Wrap" 
            Text="Skill 2" VerticalAlignment="Top" Width="164"
            Style="{ThemeResource ListViewEmptyStaticTextBlockStyle}"/>
        <TextBox
            x:Name="FirstAttBox"
            HorizontalAlignment="Left" Height="41" 
            Margin="37,319,0,0" TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="296"
            Text=""
            InputScope="Number"
            PlaceholderText="Rate out of 5"/>
        <TextBox 
            x:Name="SecondAttBox"
            HorizontalAlignment="Left" Height="39" 
            Margin="37,467,0,0" TextWrapping="Wrap"  
            VerticalAlignment="Top" Width="296"
            InputScope="Number"
            Text=""
            PlaceholderText="Rate out of 5"
            />
        <Button x:ConnectionId='1'
            x:Name="AddtoDataButton"
            Style="{ThemeResource PivotTitleContentControlStyle}"
            Content="Add" 
                                         
            HorizontalAlignment="Left" Height="31" Margin="144,548,0,0" VerticalAlignment="Top" Width="73"/>

    </Grid>
</Page>

